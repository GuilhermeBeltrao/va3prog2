<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-border-color: black;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.va3prog2.controllers.UserController">
   <children>
      <VBox layoutX="354.0" layoutY="78.0" prefHeight="178.0" prefWidth="187.0" spacing="20.0">
         <children>
            <TextField fx:id="fullNameField" />
            <TextField fx:id="nicknameField" />
            <PasswordField fx:id="passwordField" />
         </children>
         <padding>
            <Insets bottom="40.0" left="20.0" right="20.0" top="40.0" />
         </padding>
      </VBox>
      <Label alignment="CENTER" layoutX="254.0" layoutY="117.0" prefHeight="25.0" prefWidth="100.0" text="Nome Completo:" />
      <Label alignment="CENTER" layoutX="254.0" layoutY="163.0" prefHeight="25.0" prefWidth="100.0" text="Apelido:" />
      <Label alignment="CENTER" layoutX="254.0" layoutY="207.0" prefHeight="25.0" prefWidth="100.0" text="Senha:" />
      <Button fx:id="registrationButton" layoutX="320.0" layoutY="272.0" mnemonicParsing="false" onAction="#registerUser" text="Registrar Usuário" />
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="271.0" layoutY="35.0" prefHeight="43.0" prefWidth="252.0"  text="Criar Usuario" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font>
      </Label>
      <VBox prefHeight="403.0" prefWidth="192.0" spacing="20.0" style="-fx-border-color: black;">
         <children>
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#loadRegister" prefHeight="33.0" prefWidth="198.0" text="Registrar Usuário" />
            <Button fx:id="groupButton" mnemonicParsing="false" onAction="#loadGroups" prefHeight="33.0" prefWidth="198.0" text="Criar Grupo" />
            <Button fx:id="giveawayButton" mnemonicParsing="false" onAction="#loadGiveaway" prefHeight="33.0" prefWidth="198.0" text="Realizar Sorteio" />
            <Button fx:id="showusersButton" mnemonicParsing="false" onAction="#loadListUsers" prefHeight="33.0" prefWidth="198.0" text="Presentes" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
